<Window x:Class="SQLITE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQLITE"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Window.Resources>
		<Style x:Key="styleTextBox" TargetType="{x:Type TextBox}">
			<Setter Property="FontSize" Value="18"/>
			<Setter Property="HorizontalAlignment" Value="Left"/>
			<Setter Property="VerticalAlignment" Value="Center"/>
			<Setter Property="Width" Value="200"/>
			<Setter Property="BorderBrush" Value="#FF5F1616"/>
		</Style>
		<Style x:Key="styleTextBlock" TargetType="{x:Type TextBlock}">
			<Setter Property="Margin" Value="0,0,10,0"/>
			<Setter Property="HorizontalAlignment" Value="Right"/>
			<Setter Property="VerticalAlignment" Value="Center"/>
			<Setter Property="FontSize" Value="18"/>
		</Style>
	</Window.Resources>
	<Grid HorizontalAlignment="Left" Width="792">
		<Grid.RowDefinitions>
			<RowDefinition Height="20*"/>
			<RowDefinition Height="80*"/>
		</Grid.RowDefinitions>
		<WrapPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
			<TextBlock FontSize="22" Text="Select Language: "/>
			<ComboBox Name="ddlLanguage" FontSize="22" Width="120" SelectionChanged="DdlLanguage_SelectionChanged">
				<ComboBoxItem IsSelected="True" Name="English">English</ComboBoxItem>
				<ComboBoxItem Name="Russian">Russian</ComboBoxItem>
				<ComboBoxItem Name="Framcais">Francais</ComboBoxItem>
				<ComboBoxItem Name="Spanish">Spanish</ComboBoxItem>
			</ComboBox>
		</WrapPanel>
		<WrapPanel>
			<Grid Grid.Row="1">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="50*"/>
					<ColumnDefinition Width="40*"/>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="5*"/>
					<RowDefinition Height="5*"/>
					<RowDefinition Height="5*"/>
					<RowDefinition Height="5*"/>
				</Grid.RowDefinitions>
				<TextBlock Text="" Grid.Row="0" Grid.Column="0" Name="lbFirstName" Style="{StaticResource styleTextBlock}"/>
				<TextBlock Text="" Grid.Row="1" Grid.Column="0" Name="lbLastName" Style="{StaticResource styleTextBlock}"/>
				<TextBlock Text="" Grid.Row="2" Grid.Column="0" Name="lbAge" Style="{StaticResource styleTextBlock}"/>
				<TextBlock Text="" Grid.Row="3" Grid.Column="0" Name="lbContact" Style="{StaticResource styleTextBlock}"/>
			</Grid>
		</WrapPanel>
	</Grid>
</Window>